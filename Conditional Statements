#include<stdio.h>
int main()
{
    int a;
    printf("enter a number");
    scanf("%d",&a);
    if(a%2==0)
    {
        printf("it is an even number");
        a=a+2;
        printf("a=%d\n",a);
        a=a+2;
        printf("a=%d\n",a);
        a=a+2;
        printf("a=%d\n",a);
        a=a+2;
        printf("a=%d\n",a);
        a=a+2;
        printf("a=%d\n",a);
        a=a+2;
        
    }
    else 
    {
        printf(" %d is an odd number",a);
    }
}
