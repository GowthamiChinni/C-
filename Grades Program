//wap to accept 5 suject martks from the user to display total ad average//

#include<stdio.h>
int main()
{
    int maths,physics,chemistry,biology,english,social,total,average;
    printf("enter your marks");
    scanf("%d",&maths);
    printf("enter your marks");
    scanf("%d",&physics);
    printf("enter your marks");
    scanf("%d",&chemistry);
    printf("enter your marks");
    scanf("%d",&biology);
    printf("enter your marks");
    scanf("%d",&english);
    printf("enter your marks");
    scanf("%d",&social);
    total=maths+physics+chemistry+biology+english+social;
    printf("total marks are %d",total);
    average=total/6;
    printf("\naverage marks are %d",average);
}

//wap to accept a five subjects marks from the user in short length code

#include<stdio.h>
int main()
{
    int maths,social,chemistry,physics,biology,hindi,total,average;
    printf("enter your subject marks each one");
    scanf("%d%d%d%d%d%d",&maths,&social,&chemistry,&physics,&biology,&hindi);
    total=maths+social+chemistry+physics+biology+hindi;
    printf("total marks are %d",total);
    average=total/6;
    printf("average marks are %d",average);
}
